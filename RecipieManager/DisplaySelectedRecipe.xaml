        xmlns:local="clr-namespace:RecipieManager"
        mc:Ignorable="d"
        Title="DisplaySelectedRecipe" Height="650" Width="1000">
    <Grid>
        <Label x:Name="changeLbl" Content="Recipe Name" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24"/>

        <Label Content="Ingredients" HorizontalAlignment="Left" Margin="30,75,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Steps" HorizontalAlignment="Left" Margin="30,324,0,0" VerticalAlignment="Top" FontSize="20"/>

        <Button Content="Close" HorizontalAlignment="Left" Margin="787,553,0,0" VerticalAlignment="Top" Height="36" Width="183" FontSize="20"/>
        
        <ListBox Name="IngBox" Margin="10,117,30,346"/>
