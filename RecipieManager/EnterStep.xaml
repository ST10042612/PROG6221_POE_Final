<Window x:Class="RecipieManager.EnterStep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipieManager"
        mc:Ignorable="d"
        Title="EnterStep" Height="350" Width="400">
    <Grid>
        <Button Content="Enter" Click="btnClick" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="25" Width="62"/>
        
        <Label Content="Please enter a step" HorizontalAlignment="Center" Margin="0,83,0,0" VerticalAlignment="Top" FontSize="20"/>
        
        <TextBox x:Name="stepField" HorizontalAlignment="Center" Height="59" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="254"/>

    </Grid>
</Window>
