<Window x:Class="RecipieManager.ShowPieChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipieManager"
        mc:Ignorable="d"
        Title="ShowPieChart" Height="450" Width="500">
    <Grid>
        <Button Content="Close" HorizontalAlignment="Center" Margin="0,352,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Pie Chart Showing the Food Groups of [number] Recipes" HorizontalAlignment="Center" Margin="0,32,0,0" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Window>
