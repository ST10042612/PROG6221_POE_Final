<Window x:Class="RecipieManager.DisplayRecipesMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipieManager"
        mc:Ignorable="d"
        Title="DisplayRecipesMenu" Height="450" Width="800">
    <Grid>
        <Label Content="Recipes" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.061,-0.71" FontSize="20"/>

        <ListBox Name="RecBox" Margin="56,63,56,130"/>

        <TextBox HorizontalAlignment="Center" Margin="0,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="22"/>

        <Label Content="Enter a Number " HorizontalAlignment="Center" Margin="0,311,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.061,-0.71" FontSize="16"/>

        <Button Content="Pick" HorizontalAlignment="Center" Margin="0,379,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
